@page
@model True_Dive_Deep.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log ind";
}

<div class="container py-5">
    <h2>Log Ind</h2>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Input.Email" class="form-label">Email</label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Input.Password" class="form-label">Adgangskode</label>
            <input asp-for="Input.Password" class="form-control" type="password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary w-100">Log Ind</button>
    </form>
</div>

