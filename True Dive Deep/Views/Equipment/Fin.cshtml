@using True_Dive_Deep.Models
@model List<Fin>
@{
    Layout = "~/Views/Shared/_ProductsLayout.cshtml";
}

<div class="row">
    @foreach (var fin in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="product-card h-100" style="width: 18rem;">
                <img src="~/lib/images/@fin.ImageFileName" class="product-image card-img-top" alt="@fin.Model" />

                <h2 class="product-title">@fin.Model @fin.Brand</h2>
                <p class="product-description"> </p>
                <p class="price-tag">💰@fin.PricePerDay DKK/pr.Dag</p>

                <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="productId" method="post">
                    <input type="hidden" name="productId" value="@fin.ProductId" />
                    <input type="hidden" name="productName" value="@fin.Model" />
                    <input type="hidden" name="brand" value="@fin.Brand" />
                    <input type="hidden" name="imageFileName" value="@fin.ImageFileName" />
                    <input type="hidden" name="price" value="@fin.PricePerDay" />

                    <select name="size" class="form-select mb-2" required>
                        <option value="">Vælg størrelse</option>
                        @foreach (var size in fin.Sizes)
                        {
                            <option value="@size">@size</option>
                        }
                    </select>

                    <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />

                    <button type="submit" class="btn btn-primary">🛒 Tilføj til Kurv</button>
                </form>
            </div>
        </div>
    }
</div>
