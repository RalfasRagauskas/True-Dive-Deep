@using True_Dive_Deep.Models
@model List<DivingSuit>
@{
    Layout = "~/Views/Shared/_ProductsLayout.cshtml";
}

<div class="row">
    @foreach (var divingSuit in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="product-card h-100" style="width: 18rem;">
                <img src="~/lib/images/@divingSuit.ImageFileName" class="product-image card-img-top" alt="@divingSuit.Model" />

                    <h2 class="product-title">@divingSuit.Model @divingSuit.Brand</h2>
                    <p class="product-description">
                        Type: @divingSuit.Type
                        Tykkelse: @divingSuit.Thickness mm
                    </p>
                    <p class="price-tag">💰@divingSuit.PricePerDay DKK/pr.Dag</p>

                <form asp-controller="Cart" asp-action="AddToCart" asp-route-id="productId" method="post">
                    <input type="hidden" name="productId" value="@divingSuit.ProductId" />
                    <input type="hidden" name="productName" value="@divingSuit.Model" />
                    <input type="hidden" name="brand" value="@divingSuit.Brand" />
                    <input type="hidden" name="imageFileName" value="@divingSuit.ImageFileName" />
                    <input type="hidden" name="price" value="@divingSuit.PricePerDay" />

                    <select name="gender" class="form-select mb-2" required>
                        <option value="">Vælg Køn</option>
                        @foreach (var gender in divingSuit.Gender)
                        {
                            <option value="@gender">@gender</option>
                        }
                    </select>

                    <select name="size" class="form-select mb-2" required>
                        <option value="">Vælg størrelse</option>
                        @foreach (var size in divingSuit.Sizes)
                        {
                            <option value="@size">@size</option>
                        }
                    </select>

                    <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />

                    <button type="submit" class="btn btn-primary">🛒 Tilføj til Kurv</button>
                </form>

            </div>
        </div>
    }
</div>