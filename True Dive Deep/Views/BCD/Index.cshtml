@using True_Dive_Deep.Models
@model List<BCD>

@{
    Layout = "_Layout";
}

<div class="row">
    @foreach (var bcd in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="width: 18rem;">
                <img src="~/lib/images/@(bcd.Model.Replace(" ", "").ToLower()).jpg" class="card-img-top" alt="@bcd.Model" />
                <div class="card-body">
                    <h5 class="card-title">Model: @bcd.Model</h5>
                    <p class="card-text">
                        Mærke: @bcd.Brand<br />
                        Pris pr. dag: @bcd.PricePerDay kr<br />
                    </p>
                    <select class="Selected-size" aria-label="Vælg størrelse">
                        <option selected>Vælg størrelse</option>
                        @foreach (var size in bcd.Sizes)
                        {
                            <option value="@size">@size</option>
                        }
                    </select>
                </div>
                 <div class="card-footer1"><a href="#" class="btn btn-primary">Tilføj til Kurv</a> 
                </div><div class="card-footer2"><a href="#" class="btn btn-primary">Se Mere</a></div>
            </div>
        </div>
    }
</div>