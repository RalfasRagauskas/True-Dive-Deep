@{
    ViewData["Title"] = "Account";
}

<style>
    .account-page h1 {
        color: #fff;
        font-weight: 700;
    }

    .account-page p {
        color: #e0e0e0;
    }

    .account-page .card {
        border-radius: 15px;
        background: linear-gradient(135deg, #1a3a5a, #2b5d8c);
        color: white;
    }

    .account-page .form-label {
        color: #fff;
    }

    .login-btn {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        color: white;
        border: none;
        border-radius: 30px;
        padding: 8px 20px;
        font-weight: 600;
        font-size: 15px;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.25);
        text-decoration: none;
        display: inline-block;
    }

        .login-btn:hover {
            background: linear-gradient(135deg, #ff9966, #ff5e62);
            color: #fff;
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 6px 14px rgba(0,0,0,0.3);
        }
</style>

<div class="account-page container py-5">
    <h1 class="text-center mb-4">Velkommen til Min Konto</h1>
    <p class="text-center mb-5">Opret en ny bruger eller log ind for at fortsætte.</p>

    <div class="row justify-content-center">
        <div class="col-md-5 mb-4">
            <div class="card p-4 shadow-sm text-center">
                <h3 class="mb-3">Opret Bruger</h3>
                <a href="/Account/Register" class="login-btn w-100">Opret Bruger</a>
            </div>
        </div>
        <div class="col-md-5 mb-4">
            <div class="card p-4 shadow-sm text-center">
                <h3 class="mb-3">Log Ind</h3>
                <a href="/Account/Login" class="login-btn w-100">Log Ind</a>
            </div>
        </div>
    </div>
</div>