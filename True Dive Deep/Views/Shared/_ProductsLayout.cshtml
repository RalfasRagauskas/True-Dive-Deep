@{
    Layout = "_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

    <style>
        :root {
            --primary: #2dd4bf;
            --secondary: #0f172a;
            --text: #1e293b;
            --bg: #f8fafc;
            --radius: 1.25rem;
            --shadow: 0 8px 20px rgba(0,0,0,0.1);
        }

        body {
            font-family: "Inter", system-ui, sans-serif;
            color: var(--text);
            margin: 0;
            padding: 2rem;
        }

        .product-card {
            background: rgba(255,255,255,0.8);
            backdrop-filter: blur(10px);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 1.5rem;
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .product-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.15);
            }

        .product-image {
        width: 250px; 
        height: 180px;
        border-radius: var(--radius);
        margin-bottom: 1rem;
        
        object-fit: contain;
    }

        .product-title {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-align: center;
            color: black
        }

        .product-description {
            font-size: 0.95rem;
            opacity: 0.8;
            text-align: center;
            margin-bottom: 1rem;
            color: black;
        }

        .price-tag {
            font-size: 1.2rem;
            font-weight: bold;
            color: var(--primary);
            margin-bottom: 1.5rem;
        }

        .actions {
            display: flex;
            gap: 0.75rem;
        }

        .success-message {
            display: none;
            color: green;
            font-weight: bold;
            margin-top: 10px;
        }

        .btn {
            padding: 0.7rem 1.4rem;
            border-radius: var(--radius);
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: background 0.2s ease;
        }

        .btn-back {
            background: #e2e8f0;
            color: var(--secondary);
        }

            .btn-back:hover {
                background: #cbd5e1;
            }

        .btn-book {
            background: var(--primary);
            color: white;
        }
            body {
           min-height: 100vh;
           margin: 0;
           color: white;
       }
       .rounded-navbar {
           border-radius: 20px;
           margin: 16px;
           box-shadow: 0 2px 8px rgba(0,0,0,0.15);
       }
      
        }

            .btn-book:hover {
                background: #14b8a6;
            }


    .search-bar {
        display: flex;
        justify-content: flex-end;
        margin: 1rem 0;
    }

        .search-bar input {
            padding: 6px 10px;
            border-radius: 20px;
            border: none;
            outline: none;
            
            left: auto;
        }

    filtersearch.filter {
        
        color: black;
        left: 40px;
    }

    .filtersearch {
        margin-right: 650px;
        color: black;
    }

    </style>


    <div class="row">
        <div class="col-md-6"></div>
        <form class="d-flex" asp-action"Index" asp-controller="EquipmentController">
        <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search"/>
        <button class="btn btn-dark" type="submit">Søg efter produkt</button>
        </form>

    <div class="col-md-6"></div>
        
    </div>




    <div class="filtersearch"> 
    <div class="search-bar">
    <img src="~/lib/Images/shopping-cart.png" alt="Cart" class="icon" style="margin-right: 10px;" width="40" height="40">
    <input type="text" placeholder="Søg">
    <div class="filter">
    <label for="sort">Sorter efter:</label>
    <select name="sort" id="sort">
        <option value="Newest">Nyeste</option>
        <option value="Most popular">Populære</option>
        <option value="Low-to-high">Billigst til dyrest</option>
        <option value="High-to-low">Dyrest til billigst</option>
    </select>
   </div>
 </div>
</div>

<div class="container">
    @RenderSection("Title", required: false)
    @RenderBody()
</div>
